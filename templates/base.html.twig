<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            BDE Strasbourg | {% block title %}
            {% endblock %}
        </title>
        <!--FontAwesome-->
        <script src="https://kit.fontawesome.com/8190148fda.js" crossorigin="anonymous"></script>
        <!-- Bootstrap CSS -->
        <link
        rel="stylesheet" href={{ asset('css/bootstrap.min.css')}}>
        <!--Custom style sheet-->
        <link rel="stylesheet" href={{ asset('css/custom.css')}}>
        
         {% block stylesheets %}{% endblock %}
        </head>

        <body>

            <header>
                <div class="jumbotron jumbotron-fluid" id="banner"></div>

                <nav class="navbar navbar-expand-lg navbar-dark" id="navbar" style="background-color : #27251f">
                    <a class="navbar-brand" href="/">BDE Strasbourg</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('index')}}">Acceuil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('shop')}}">Boutique</a>
                            </li>
                            <div class="dropdown">
                              <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Evénements</a>                           
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="{{path('event')}}">Evénements à venir</a>
                                <a class="dropdown-item" href="{{path('event')}}">Evénements passés</a>
                              </div>
                            </div>

                            {% if is_granted('ROLE_ADMIN')%}
                             <li class="nav-item">
                                <a class="nav-link" href="/">Administration</a>
                            </li>
                            {% else %}
                            {% endif %}
                        </ul>
                    </div>

                    {% if app.user %}
                     <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: gray; margin-right : 50px;">Profil</a>                           
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="{{path('security_account')}}">Profil</a>
                        <a class="dropdown-item" href="/logout">Déconnexion</a>
                    </div>
                    {% else %}
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: gray; margin-right : 50px;">Connexion</a>                           
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="{{path('security_login')}}">Connexion</a>
                        <a class="dropdown-item" href="{{path('security_register')}}">Inscription</a>
                    </div>
                    {% endif %}
                </nav>
            </header>

                            {% block body %}{% endblock %}

           <!-- <div class="borderleft">

            </div>-->


            

                <footer style="sticky : bottom">
                    <div class="container"> 
                    <div class="row">
                        <div class="col-sm">
                            <p class="">
                            <h4 id="list-item-1">Information</h4>  
                           
                            </p>   
                        </div>  
                        <div class="col-sm">
                            <p class="">
                            <h4 class="">Suivez nous sur :</h4>  
                            
                            </p> 
                        </div>
                        <div class="col-sm">
                                <p class="">
                                <h4 class="">Informations légales </h4>  
                                </p> 
                            </div>
                    </div>
                    </div>
                </footer>

               


                {% block javascripts %}  


                    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
                    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
                 {% endblock %}

</body></html>

<form method="post" action="{{ path('delete_photo', {'id': photo.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette photo?');" class="d-inline-block">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
	<button class="btn ">
		<i class="fa fa-trash" aria-hidden="true"></i>
	</button>
</form>

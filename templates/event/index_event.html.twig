{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}

<section class="evements">
    
    {% if events %}
    {% for event in events %}
        
    <article>
        <h2>{{ event.title }}</h2>
        <div class="metadata">Prévu pour le: {{ event.date | date ('d/m/Y à H:i')}}</div>
        <div class="content">
            <img src=" {{ event.image }}" alt="">
            <p>{{ event.description | raw }}</p>
            <a href=" {{ path('event_show', {'id': event.id }) }}" class="btn btn-primary">En savoir plus</a>
        </div>
    </article>
    {% endfor %}
    {% else %}
    <p>Il n'y a pas d'évenements de prévus</p>
    {% endif %}

</section>

{% endblock %}
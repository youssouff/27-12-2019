<form method="post" action="{{ path('delete_comment', {'id': comment.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce commentaire?');" class="d-inline-block">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
        <button class="btn "><i class="fa fa-trash" aria-hidden="true"></i></button>
</form>
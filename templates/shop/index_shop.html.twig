{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Notre boutique</h1>
			<p class="lead">Retrouvez tous nos goodies sur ici !</p>
		</div>
	</div>

<div class="container-fluid">
    {{form_start(form)}}
    <div class="row">
        <div class="col-2 col-md-2 mb-2 mx-auto">
            {{form_widget(form.maxPrice)}}
        </div>
        <div class="col-2 col-md-2 mx-auto">
            {{form_widget(form.category)}}
        </div>
        <div class="col-2 col-md-2 mx-auto">
            {{form_widget(form.orderBy)}}
           
        </div>
        <div class="col-2 col-md-2 mx-auto">
        {{form_widget(form.orderType)}}
        </div>
        <div class="col-2 col-md-2 mx-auto">
            <button type="submit" class="btn btn-dark btn-block">Rechercher</button>
            <a href="{{path('shop_checkout')}}" class="btn btn-dark btn-block">Voir le Panier</a>
        </div>
    </div>
    {{form_end(form)}}
    <hr>

    <div class="row">
        {% if goodies is empty %}
        <div class="alert alert-danger btn-block text-center">
            Pas de résultat
        </div>
        {% endif %}
    </div>
    <div class="row m-4">
            {% for goody in goodies %}
            <div class="cole-md-6 col-lg-4 mb-2">
                <div class="card">
                    <div class="card-header">
                        {{ goody.name }}
                    </div>
                    <div class="card-body">
                        <div class="meta">Categorie : {{ goody.category.name }}</div>
                        {{ goody.description }}

                        Prix : {{goody.price ? goody.price : "Gratuit"}}
                        <a href="{{path('shop_show', {'id': goody.id }) }}" class="btn btn-dark"> Détails</a>
                        <a href="{{path('cart_add', {'id': goody.id }) }}" class="btn btn-dark"> Ajouter au
                            panier</a>
                    </div>
                </div>
            </div>
            {% endfor %}
    </div>
    <div class="row align-center">
        {{ knp_pagination_render(goodies) }}
    </div>
</div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
<h2 class="title py-2">Boutique</h2>
<div class="container-fluid">
    {{form_start(form)}}
    <div class="row">
        <div class="col-6 col-md-3 mb-2">
            {{form_widget(form.maxPrice)}}
        </div>
        <div class="col-6 col-md-3">
            {{form_widget(form.category)}}
        </div>
        <div class="col-6 col-md-3">
            {{form_widget(form.orderBy)}}
            {{form_widget(form.orderType)}}

        </div>
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-dark btn-block">Search</button>
        </div>
    </div>
    {{form_end(form)}}

    <div class="row">
        {% if goodies is empty %}
        <div class="alert alert-danger btn-block text-center">
            Pas de résultat
        </div>
        {% endif %}
    </div>
    <div class="row m-4">
        <div class="card w-100">
            <div class="card-header">Panier</div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </thead>
                    <tbody>
                        {% if cart is not null %}
                        {% for item in cart %}
                        <tr>
                            <td>
                                {{item.product.name}}
                            </td>
                            <td>
                                {{item.product.price}} €
                            </td>
                            <td>
                                {{item.quantity}}
                            </td>
                            <td>
                                {{item.product.price * item.quantity}} €
                            </td>
                            <td>
                                <a href="{{path('cart_remove', {'id': item.product.id})}}"
                                    class="btn btn-danger sm">Retirer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    <tfoot>
                        <tr>
                            <td colspan="3">Total : </td>
                            <td>{{ total }} €</td>
                            <td></td>
                        </tr>
                    </tfoot>
                    {% endif %}
                    </tbody>
                </table>
                <a href="{{path('cart_clear')}}" class="btn btn-danger">Vider le panier</a>
                <a href="" class="btn btn-danger">Passer commande</a>
            </div>
        </div>
    </div>
    <div class="row m-4">
        <div class="row">
            {% for goody in goodies %}
            <div class="cole-md-6 col-lg-4 mb-2">
                <div class="card">
                    <div class="card-header">
                        {{ goody.name }}
                    </div>
                    <div class="card-body">
                        <div class="meta">Categorie : {{ goody.category.name }}</div>
                        {{ goody.description }}

                        Prix : {{goody.price ? goody.price : "Gratuit"}}
                        <a href="{{path('shop_show', {'id': goody.id }) }}" class="btn btn-dark"> Détails</a>
                        <a href="{{path('cart_add', {'id': goody.id }) }}" class="btn btn-dark"> Ajouter au
                            panier</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="row align-center">
        {{ knp_pagination_render(goodies) }}
    </div>
</div>

{% endblock %}